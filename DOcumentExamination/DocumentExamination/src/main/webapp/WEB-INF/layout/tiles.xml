<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
  
    <definition name="template" template="/WEB-INF/layout/template.jsp">
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
    </definition>
    
     <definition name="index" extends="template">
        <put-attribute name="body" value="/WEB-INF/layout/index.jsp" />
    </definition>
    
    <definition name="editDocument" extends="template">
        <put-attribute name="body" value="/WEB-INF/layout/editDocument.jsp" />
    </definition>
    
    <definition name="documents" extends="template">
        <put-attribute name="body" value="/WEB-INF/layout/documents.jsp" />
    </definition>
    
    <definition name="document" extends="template">
        <put-attribute name="body" value="/WEB-INF/layout/document.jsp" />
    </definition>

</tiles-definitions>